{
	"compilerOptions": {
		"alwaysStrict": true,
		"declaration": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"outDir": "dist",
		"pretty": true,
		"sourceMap": true,
		"sourceRoot": "src",
		"target": "es2016"
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
